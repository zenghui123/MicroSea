<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

<RelativeLayout
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

       android:textSize="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人中心"
        android:id="@+id/textView3"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_marginRight="20dp"

        android:layout_gravity="right"
        android:src="@mipmap/camera_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_camera"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
    <TextView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:layout_marginRight="10dp"

        android:drawableRight="@mipmap/arrow_icon"

        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/default_head_icon"
        android:gravity="left|center_vertical"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:id="@+id/button_user" />
    <TextView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <Button
        android:drawableRight="@mipmap/arrow_icon"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:text="钱袋"
        android:gravity="left|center_vertical"
        android:id="@+id/button_money" />

    <TextView
        android:background="#25000000"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:drawableRight="@mipmap/arrow_icon"
        android:layout_marginRight="20dp"

        android:layout_marginLeft="15dp"
        android:drawableLeft="@mipmap/me_order_icon"
        android:gravity="left|center_vertical"

        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全部订单"
        android:id="@+id/button_order" />
    <TextView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
<LinearLayout

    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button

        android:layout_weight="1"
       android:drawableTop="@mipmap/me_unpay_icon"

        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待付款"
        android:id="@+id/button_unpay" />
    <TextView
        android:background="#50000000"
        android:layout_width="1dp"
        android:layout_height="match_parent" />
    <Button
        android:layout_weight="1"

        android:drawableTop="@mipmap/me_unsend_icon"

        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待发货"
        android:id="@+id/button_unsend" />
    <TextView
        android:background="#50000000"
        android:layout_width="1dp"
        android:layout_height="match_parent" />
    <Button
        android:layout_weight="1"

        android:drawableTop="@mipmap/me_unget_icon"

        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待收货"
        android:id="@+id/button_unget" />
    <TextView
        android:background="#50000000"
        android:layout_width="1dp"
        android:layout_height="match_parent" />
    <Button
        android:layout_weight="1"

        android:drawableTop="@mipmap/me_server_icon"

        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款/售后"
        android:id="@+id/button_server" />

</LinearLayout>
    <TextView
        android:background="#25000000"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <Button
        android:drawableRight="@mipmap/arrow_icon"
        android:layout_marginRight="20dp"

        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/me_shop_icon"
        android:gravity="left|center_vertical"

        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的小店"
        android:id="@+id/button_shop" />
    <TextView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <Button
        android:drawableRight="@mipmap/arrow_icon"
        android:layout_marginRight="20dp"

        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/me_promo_icon"
        android:gravity="left|center_vertical"

        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的皇榜"
        android:id="@+id/button_promo" />
    <TextView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <Button
        android:drawableRight="@mipmap/arrow_icon"
        android:layout_marginRight="20dp"

        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/me_address_icon"
        android:gravity="left|center_vertical"

        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收货地址"
        android:id="@+id/button_address" />
    <TextView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <Button
        android:drawableRight="@mipmap/arrow_icon"
        android:layout_marginRight="20dp"

        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/me_setting_icon"
        android:gravity="left|center_vertical"

        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置"
        android:id="@+id/button_setting" />
    <TextView
        android:background="#25000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
</ScrollView>